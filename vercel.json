{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "app.py",
      "methods": ["POST"]
    },
    {
      "src": "/ping",
      "dest": "app.py",
      "methods": ["GET"]
    },
    {
      "src": "/",
      "dest": "app.py",
      "methods": ["GET"]
    }
  ]
}
